@model string
@{
    Layout = "_DetailsLayout";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-body text-center">
            <div class="display-4 text-danger"><i class="fas fa-times-circle"></i></div>
            <h1 class="card-title text-danger mt-4">Payment Canceled</h1>
            <p style="color:#ccc;" class="card-text lead mt-3">Your payment was not completed. If you encountered an issue, please try again or contact support.</p>
            <hr>
            <a href="@Url.Action("Index", "Home")" class="btn btn-danger btn-lg mt-3">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>
</div>
