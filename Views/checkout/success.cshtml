@model string
@{
    Layout = "_DetailsLayout";
}

<div class="container mt-5">
    <div class="card shadow-sm border-success">
        <div class="card-body text-center">
            <div class="display-4 text-success"><i class="fas fa-check-circle"></i></div>
            <h1 class="card-title text-success mt-4">Payment Successful!</h1>
            <p style="color:#ccc;" class="card-text lead mt-3">Thank you for your purchase! Your payment was processed successfully.</p>
            <p class="text-muted text-warning">You will receive a confirmation email shortly.</p>
            <hr>
            <a href="@Url.Action("Index", "Home")" class="btn btn-success btn-lg mt-3">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>
</div>
